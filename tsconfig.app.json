{
  "compilerOptions": {
    // Enable incremental compilation
    "composite": true,
    // Location for build info file
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    // Specify ECMAScript target version
    "target": "ES2020",
    // Use define for class fields
    "useDefineForClassFields": true,
    // Specify library files to be included in the compilation
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    // Specify module code generation
    "module": "ESNext",
    // Skip type checking of all declaration files
    "skipLibCheck": true,
    // Enable bundler mode for module resolution
    "moduleResolution": "bundler",
    // Allow importing files with ".ts" extensions
    "allowImportingTsExtensions": true,
    // Allow importing JSON modules
    "resolveJsonModule": true,
    // Ensure modules are treated as isolated units
    "isolatedModules": true,
    // Set module detection mode
    "moduleDetection": "force",
    // Do not emit outputs
    "noEmit": true,
    // Specify JSX code generation
    "jsx": "react-jsx",
    // Linting options
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // Base URL to resolve non-relative module names
    "baseUrl": ".",
    // Path mapping
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
